
<!DOCTYPE html>
<html lang="en">

<div id="navbar"></div>
	<script>
		fetch('navbar.html')
		.then(response => response.text())
		.then(html => {
			document.getElementById('navbar').innerHTML = html;
		})
		.catch(error => {
			console.error('Error fetching the navbar:', error);
		});

	</script>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Feedback Form</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="./css/style.css">
    <style>
        body {
            background-color: rgb(237, 236, 239);
            background-image: url('https://source.unsplash.com/1920x1080/?hotel');
            background-repeat: no-repeat;
            background-size: cover;
            background-position: center center;
            position: relative;
            min-height: 100vh;
            min-width: 100vw;
            overflow: auto;
        }
        .container {
            margin-top: 30px;
            margin-bottom: 40px;
        }

        .star-rating input {
            display: none;
        }

        .star-rating label {
            display: inline-block;
            font-size: 25px;
            color: #151515;
            cursor: pointer;
        }
       
        input[type="radio"] {
            color: aqua;
        }

        .star-rating input:checked+label {
            color: #FFD700;
        }

        .star-rating input:checked+label ~ label {
            color: #C0C0C0;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 main">
                <h1>Feedback Form</h1>
                <form id="feedbackForm" action="/submit-feedback" method="post">

                    <input class="box" type="text" name="name" id="name" pattern="[A-Za-z\s]{3,}"
                       title="Please enter a valid name" placeholder="Name" required/><br><br>

                    <input class="box" type="text" name="phone" id="phone" pattern="[0-9]{10}"
                       title="Please enter a 10 digit number"
                       placeholder="Phone Number" required/><br>

                    <div class="form-group star-rating">
                        <label for="rating-hotel">Hotel Services</label>
                        <input type="radio" id="rating-hotel-5" name="rating-hotel" value="5" required><label for="rating-hotel-5">★</label>
                        <input type="radio" id="rating-hotel-4" name="rating-hotel" value="4"><label for="rating-hotel-4">★</label>
                        <input type="radio" id="rating-hotel-3" name="rating-hotel" value="3"><label for="rating-hotel-3">★</label>
                        <input type="radio" id="rating-hotel-2" name="rating-hotel" value="2"><label for="rating-hotel-2">★</label>
                        <input type="radio" id="rating-hotel-1" name="rating-hotel" value="1"><label for="rating-hotel-1">★</label>
                    </div>
                    <div class="form-group star-rating">
                        <label for="rating-reception">Reception Services</label>
                        <input type="radio" id="rating-reception-5" name="rating-reception" value="5" required><label for="rating-reception-5">★</label>
                        <input type="radio" id="rating-reception-4" name="rating-reception" value="4"><label for="rating-reception-4">★</label>
                        <input type="radio" id="rating-reception-3" name="rating-reception" value="3"><label for="rating-reception-3">★</label>
                        <input type="radio" id="rating-reception-2" name="rating-reception" value="2"><label for="rating-reception-2">★</label>
                        <input type="radio" id="rating-reception-1" name="rating-reception" value="1"><label for="rating-reception-1">★</label>
                    </div>
                    <div class="form-group star-rating">
                        <label for="rating-cleanliness">Cleanliness</label>
                        <input type="radio" id="rating-cleanliness-5" name="rating-cleanliness" value="5" required><label for="rating-cleanliness-5">★</label>
                        <input type="radio" id="rating-cleanliness-4" name="rating-cleanliness" value="4"><label for="rating-cleanliness-4">★</label>
                        <input type="radio" id="rating-cleanliness-3" name="rating-cleanliness" value="3"><label for="rating-cleanliness-3">★</label>
                        <input type="radio" id="rating-cleanliness-2" name="rating-cleanliness" value="2"><label for="rating-cleanliness-2">★</label>
                        <input type="radio" id="rating-cleanliness-1" name="rating-cleanliness" value="1"><label for="rating-cleanliness-1">★</label>
                    </div>
                    <div class="form-group star-rating">
                        <label for="rating-amenities">Amenities</label>
                        <input type="radio" id="rating-amenities-5" name="rating-amenities" value="5" required><label for="rating-amenities-5">★</label>
                        <input type="radio" id="rating-amenities-4" name="rating-amenities" value="4"><label for="rating-amenities-4">★</label>
                        <input type="radio" id="rating-amenities-3" name="rating-amenities" value="3"><label for="rating-amenities-3">★</label>
                        <input type="radio" id="rating-amenities-2" name="rating-amenities" value="2"><label for="rating-amenities-2">★</label>
                    <input type="radio" id="rating-amenities-1" name="rating-amenities" value="1"><label for="rating-amenities-1">★</label>
                    </div>
                    <div class="form-group star-rating">
                        <label for="rating-location">Location</label>
                        <input type="radio" id="rating-location-5" name="rating-location" value="5" required><label for="rating-location-5">★</label>
                        <input type="radio" id="rating-location-4" name="rating-location" value="4"><label for="rating-location-4">★</label>
                        <input type="radio" id="rating-location-3" name="rating-location" value="3"><label for="rating-location-3">★</label>
                        <input type="radio" id="rating-location-2" name="rating-location" value="2"><label for="rating-location-2">★</label>
                        <input type="radio" id="rating-location-1" name="rating-location" value="1"><label for="rating-location-1">★</label>
                    </div>
                    <div class="form-group star-rating">
                        <label for="rating-food">Food Quality</label>
                        <input type="radio" id="rating-food-5" name="rating-food" value="5" required><label for="rating-food-5">★</label>
                        <input type="radio" id="rating-food-4" name="rating-food" value="4"><label for="rating-food-4">★</label>
                        <input type="radio" id="rating-food-3" name="rating-food" value="3"><label for="rating-food-3">★</label>
                        <input type="radio" id="rating-food-2" name="rating-food" value="2"><label for="rating-food-2">★</label>
                        <input type="radio" id="rating-food-1" name="rating-food" value="1"><label for="rating-food-1">★</label>
                    </div>
                    <div class="form-group star-rating">
                        <label for="rating-staff">Staff Friendliness</label>
                        <input type="radio" id="rating-staff-5" name="rating-staff" value="5" required><label for="rating-staff-5">★</label>
                        <input type="radio" id="rating-staff-4" name="rating-staff" value="4"><label for="rating-staff-4">★</label>
                        <input type="radio" id="rating-staff-3" name="rating-staff" value="3"><label for="rating-staff-3">★</label>
                        <input type="radio" id="rating-staff-2" name="rating-staff" value="2"><label for="rating-staff-2">★</label>
                        <input type="radio" id="rating-staff-1" name="rating-staff" value="1"><label for="rating-staff-1">★</label>
                    </div>
                    <div class="form-group star-rating">
                        <label for="rating-value">Value for Money</label>
                        <input type="radio" id="rating-value-5" name="rating-value" value="5" required><label for="rating-value-5">★</label>
                        <input type="radio" id="rating-value-4" name="rating-value" value="4"><label for="rating-value-4">★</label>
                        <input type="radio" id="rating-value-3" name="rating-value" value="3"><label for="rating-value-3">★</label>
                        <input type="radio" id="rating-value-2" name="rating-value" value="2"><label for="rating-value-2">★</label>
                        <input type="radio" id="rating-value-1" name="rating-value" value="1"><label for="rating-value-1">★</label>
                    </div>
                    <div class="form-group">
                        <label for="comment">Comment (max 100 words)</label>
                        <textarea class="form-control" id="comment" name="comment" rows="4" maxlength="100" required></textarea>
                    </div>

                    <input class="box" type="email" name="email" id="email"
                    pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" title="Please enter a valid email address"
                    placeholder="E-Mail" required/><br>
                    <button type="submit" id="visual" class="btn btn-primary">Submit</button>
                    </form>
</div>
</div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</body>

<div id="footer" style="position:fixed; height: 8%; left: 0; bottom: 0; width: 100%;"></div>
	<script>
		fetch('footer.html')
		.then(response => response.text())
		.then(html => {
			document.getElementById('footer').innerHTML = html;
		})
		.catch(error => {
			console.error('Error fetching the footer:', error);
		});
	</script>

</html>

